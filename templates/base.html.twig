<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Projet Bienveillance
			{% endblock %}
		</title>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body class="d-flex flex-column min-vh-100 bg-light">

			<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
				<div class="container">
					<a class="navbar-brand fw-bold" href="{{ path('app_home') }}">
						<i class="fa-solid fa-heart"></i>
						Bienveillance
					</a>

					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav me-auto">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
							</li>


							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_defi_new') }}">
										<i class="fa-solid fa-plus-circle"></i>
										Proposer un défi
									</a>
								</li>
							{% endif %}
						</ul>

						<ul class="navbar-nav ms-auto">
							{% if app.user %}
								{# --- UTILISATEUR CONNECTÉ --- #}
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
										<i class="fa-solid fa-user-circle"></i>
										{{ app.user.email }}
									</a>
									<ul class="dropdown-menu dropdown-menu-end">

										{% if is_granted('ROLE_ADMIN') %}
											<li>
												<a class="dropdown-item text-danger fw-bold" href="{{ path('app_admin') }}">
													<i class="fa-solid fa-user-shield"></i>
													Administration
												</a>
											</li>
											<li><hr class="dropdown-divider"></li>
										{% endif %}

										<li>
											<a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
										</li>
									</ul>
								</li>
							{% else %}
								{# --- VISITEUR (Non connecté) --- #}
								<li class="nav-item d-flex gap-2">
									<a class="btn btn-outline-light btn-sm d-flex align-items-center" href="{{ path('app_register') }}">S'inscrire</a>
									<a class="btn btn-light text-primary fw-bold btn-sm d-flex align-items-center" href="{{ path('app_login') }}">Se connecter</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>

			<main class="container my-5 flex-grow-1">

				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'warning' ? 'warning' : 'success') }} alert-dismissible fade show" role="alert">
							{{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					{% endfor %}
				{% endfor %}
				{% block body %}{% endblock %}
			</main>

			<footer class="bg-dark text-white text-center py-3 mt-auto">
				<div class="container">
					<small>&copy;
						{{ "now"|date("Y") }}
						Projet Symfony - Bienveillance au quotidien</small>
				</div>
			</footer>

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
